<!--フラッシュメッセージ-->
<div>
  <%= flash[:notice] %>
</div>

<!--バリデーション-->
<% if @booker.errors.any? %>
  <%= @booker.errors.count %> error prohibited this obj from being saved:
  <ul>
    <%= @booker.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>

<!--メイン-->
<div class="container">
  <div class="row justify-content-center">

    <div class="col-md-4">  
      <%= render 'list', booker: @booker %>
    
    <div class="col-md-7 ml-auto">        
      
      <% @books.each do |book| %>
        <h1>Books</h1>
        
        <h4>Title</h4>
        <%= link_to book_path(book.id) do %>
          <%= book.title %>
        <% end %>
      
        <h4>Opinion</h4>
        <%= book.body %>
      <% end %>
    </div>
  </div>
</div>