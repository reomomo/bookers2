<!--フラッシュメッセージ-->
<div>
  <%= flash[:notice] %>
</div>

<!--バリデーション-->
<% if @booker.errors.any? %>
  <%= @booker.errors.count %> error prohibited this obj from being saved:
  <ul>
    <%= @booker.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>

<!--メイン-->
<div class="container px-5 px-sm-0">
  <div class="row">
    <div class="col-md-3">  
      <%= render 'list', booker: @booker, user: current_user %>
    </div>
    <div class="col-md-8 offset-md-1">        
      <h1>Books</h1>
      
      <table class="table table-hover">
        <thead>
          <tr>
            <th style="width: 10%"></th>
            <th scope="col" style="width: 30%">Title</th>
            <th scope="col" style="width: 60%">Opinion</th>
          </tr>
        </thead>
        <% @books.each do |book| %>
        <tbody>
          <tr>
            <td>
              <%= link_to user_path(book.user.id) do %>
                <%= image_tag book.user.get_profile_image(100,100) %>
              <% end %>
            </td>
            <td>
              <%= link_to book_path(book.id) do %>
                <%= book.title %>
              <% end %>
            </td>
            <td>
              <%= book.body %>
            </td>
          </tr>
        </tbody>
        <% end %>
      </table>
      
    </div>
  </div>
</div>