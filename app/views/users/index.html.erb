<div class="container">
  <div class="row mt-3">
    <div class="col-md-3">  
      <%= render 'books/list', booker: Book.new, user: current_user %>
    </div>
    <div class="col-md-8 ml-auto"> 
      <h1>Users</h1>
      <table class="table">
        <thead>
          <tr>
            <th>image</th>
            <th scope="col">name</th>
            <th scope="col"></th>
          </tr>
        </thead>
        <% @users.each do |user| %>
        <tbody>
          <tr>
            <td><%= image_tag user.get_profile_image(100,100) %></td>
            <td>
              <%= user.name %>
            </td>
            <td>
              <%= link_to "Show", user_path(user.id) %>
            </td>
          </tr>
        </tbody>
        <% end %>
      </table>
    </div>
  </div>
</div>
